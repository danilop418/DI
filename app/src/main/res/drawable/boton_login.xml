<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="10dp" android:color="#ffb7521e"/>
            <corners android:radius="24dp"/>
            <solid android:color="#82EBE4"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="10dp" android:color="#ffb7521e"/>
            <corners android:radius="24dp"/>
            <gradient android:angle="90" android:startColor="#1d3735" android:endColor="#21403C"/>
        </shape>
    </item>
</selector>